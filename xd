from graphviz import Digraph

# Crear un nuevo objeto de gráfico
dot = Digraph()

# Añadir nodos (conceptos)
dot.node('A', 'Cambio Climático')
dot.node('B', 'Efectos')
dot.node('C1', 'Aumento del Nivel del Mar\n(Pérdida de glaciares)')
dot.node('C2', 'Olas de Calor\n(Aumento de temperaturas extremas)')
dot.node('C3', 'Aumento de Tormentas\n(Fenómenos más intensos)')
dot.node('C4', 'Sequías\n(Desertificación)')
dot.node('C5', 'Extinción de Especies\n(Pérdida de biodiversidad)')
dot.node('C6', 'Alergias\n(Aumento de alérgenos)')
dot.node('C7', 'Destrucción de Cosechas\n(Pérdida de producción alimentaria)')
dot.node('C8', 'Acidificación de Océanos\n(Aumento de CO2)')
dot.node('C9', 'Mayor Incidencia de Enfermedades\n(Transmisión por insectos)')
dot.node('C10', 'Destrucción de Ecosistemas\n(Daños a hábitats)')

# Conectar nodos
dot.edges(['AB', 'AC1', 'AC2', 'AC3', 'AC4', 'AC5', 'AC6', 'AC7', 'AC8', 'AC9', 'AC10'])

# Renderizar y mostrar el mapa
dot.render('mapa_conceptual', format='png', cleanup=True)
dot.view()

